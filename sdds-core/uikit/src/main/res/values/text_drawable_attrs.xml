<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <attr name="sd_textDrawableStyle" format="reference" />

    <declare-styleable name="TextDrawable" tools:ignore="ResourceName">
        <attr name="android:drawableStart" />
        <attr name="android:drawableEnd" />
        <attr name="sd_drawableStartTint" format="color" />
        <attr name="sd_drawableEndTint" format="color" />
        <attr name="sd_drawableSize" format="dimension" />

        <attr name="android:text" />
        <attr name="android:textAppearance" />
        <attr name="android:textColor" />
        <attr name="sd_textPaddingStart" format="dimension"/>
        <attr name="sd_textPaddingEnd" format="dimension"/>
        <attr name="sd_textAlignment" format="enum">
            <enum name="start" value="0" />
            <enum name="center" value="1" />
            <enum name="end" value="2" />
        </attr>

        <attr name="android:backgroundTint"/>
        <attr name="backgroundTint"/>
    </declare-styleable>
</resources>