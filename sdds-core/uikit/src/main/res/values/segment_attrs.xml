<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <attr name="sd_segmentItemStyle" format="reference" />
    <attr name="sd_segmentStyle" format="reference" />
    <attr name="sd_segmentItemStyleOverlay" format="reference"/>
    <attr name="sd_segmentStyleOverlay" format="reference"/>
    <!--
    Компонент "Сегмент итем".
    Умеет отображать иконку, два текста: основной и дополнительный, и счетчик.
  -->
    <declare-styleable name="SegmentItem" tools:ignore="ResourceName">
        <attr name="backgroundTint"/>
        <attr name="sd_valueTextColor"/>
        <attr name="sd_iconTint"/>
        <attr name="sd_iconSize"/>
        <attr name="sd_spinnerTint"/>
        <attr name="android:checkable"/>
        <attr name="android:checked"/>
        <attr name="sd_counterStyle"/>
        <attr name="sd_counterPadding" format="dimension"/>
        <attr name="sd_counterText" format="string"/>
        <attr name="sd_counterEnabled"/>
        <attr name="sd_shapeAppearance"/>
        <attr name="sd_shapeAppearanceAdjustment"/>
        <attr name="sd_valuePadding"/>

    </declare-styleable>

    <declare-styleable name="Segment" tools:ignore="ResourceName">
        <!-- Распределение итемов равномерно по ширине контейнера -->
        <attr name="sd_stretch" format="boolean" />
        <attr name="sd_segmentItemStyleOverlay"/>
        <attr name="sd_shapeAppearance" />
        <attr name="sd_shapeAppearanceAdjustment"/>
        <attr name="sd_strokeWidth"/>
        <attr name="sd_strokeColor"/>
    </declare-styleable>

</resources>