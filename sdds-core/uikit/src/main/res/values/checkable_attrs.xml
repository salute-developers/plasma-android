<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <attr name="sd_switchStyle" format="reference" />
    <attr name="sd_checkBoxGroupStyle" format="reference" />
    <attr name="sd_radioBoxGroupStyle" format="reference" />
    <attr name="sd_checkBoxStyleOverlay" format="reference" />
    <attr name="sd_radioBoxStyleOverlay" format="reference" />

    <declare-styleable name="SdCheckable">
        <!-- Дополнительный текст  -->
        <attr name="sd_description" format="string" />
        <!-- Стиль дополнительного текста  -->
        <attr name="sd_descriptionTextAppearance" format="reference" />
        <!--  Цвет дополнительного текста      -->
        <attr name="sd_descriptionTextColor" format="reference|color" />
        <!-- Отступ между основным и дополнительным текстом -->
        <attr name="sd_descriptionPadding" format="dimension" />

        <!-- Цвет заливки -->
        <attr name="sd_buttonBoxColor" format="reference|color" />
        <!-- Цвет границы -->
        <attr name="sd_buttonBorderColor" format="reference|color" />
        <!-- Цвет маркера -->
        <attr name="sd_buttonMarkColor" format="reference|color" />

        <attr name="sd_focusBorderEnabled" format="boolean" />

        <attr name="android:textAppearance" />
    </declare-styleable>

    <declare-styleable name="CheckBox" tools:ignore="ResourceName">
        <!-- Дополнительный текст  -->
        <attr name="sd_description" />
        <!-- Стиль дополнительного текста  -->
        <attr name="sd_descriptionTextAppearance" />
        <!--  Цвет дополнительного текста -->
        <attr name="sd_descriptionTextColor" />
        <!-- Отступ между основным и дополнительным текстом -->
        <attr name="sd_descriptionPadding" />

        <attr name="sd_toggleState" format="enum">
            <enum name="off" value="0" />
            <enum name="on" value="1" />
            <enum name="indeterminate" value="2" />
        </attr>

        <!-- Цвет заливки  -->
        <attr name="sd_buttonBoxColor" />
        <!-- Цвет границы -->
        <attr name="sd_buttonBorderColor" />
        <!-- Цвет маркера -->
        <attr name="sd_buttonMarkColor" />
        <attr name="sd_buttonMarkColorMode" format="enum">
            <enum name="add" value="0"/>
            <enum name="src_over" value="1"/>
            <enum name="src_in" value="2"/>
            <enum name="src_atop" value="3"/>
            <enum name="multiply" value="4"/>
            <enum name="screen" value="5"/>
        </attr>

        <attr name="sd_focusBorderEnabled" />

    </declare-styleable>

    <declare-styleable name="RadioBox" tools:ignore="ResourceName">
        <!-- Дополнительный текст  -->
        <attr name="sd_description" />
        <!-- Стиль дополнительного текста  -->
        <attr name="sd_descriptionTextAppearance" />
        <!--  Цвет дополнительного текста -->
        <attr name="sd_descriptionTextColor" />
        <!-- Отступ между основным и дополнительным текстом -->
        <attr name="sd_descriptionPadding" />

        <!-- Цвет заливки -->
        <attr name="sd_buttonBoxColor" />
        <!-- Цвет границы -->
        <attr name="sd_buttonBorderColor" />
        <!-- Цвет маркера -->
        <attr name="sd_buttonMarkColor" />
        <attr name="sd_buttonMarkColorMode" />

        <attr name="sd_focusBorderEnabled" />
    </declare-styleable>

    <declare-styleable name="Switch" tools:ignore="ResourceName">
        <!-- Цвет неподвижной части переключателя -->
        <attr name="sd_buttonTrackColor" format="reference|color" />
        <!-- Цвет бордера неподвижной части переключателя -->
        <attr name="sd_buttonTrackBorderColor" format="reference|color" />
        <!-- Цвет подвижной части переключателя -->
        <attr name="sd_buttonThumbColor" format="reference|color" />
        <attr name="sd_buttonThumbColorMode"/>
        <attr name="sd_shapeAppearance"/>
        <attr name="sd_background"/>
    </declare-styleable>

    <declare-styleable name="SdCheckBoxDrawable">
        <attr name="sd_toggleWidth" format="dimension|float|reference" />
        <attr name="sd_toggleHeight" format="dimension|float|reference" />
        <attr name="sd_boxCornerRadius" format="dimension|float" />
        <attr name="sd_buttonPadding" format="dimension|float" />
        <attr name="sd_focusBorderEnabled" />
        <attr name="sd_checkedIcon" format="reference"/>
        <attr name="sd_indeterminateIcon" format="reference"/>
        <attr name="sd_shapeAppearance"/>
        <attr name="sd_toggleBorderWidth" format="dimension|float|reference"/>
        <attr name="sd_toggleIconWidth" format="dimension|float|reference"/>
        <attr name="sd_toggleIconHeight" format="dimension|float|reference"/>
        <attr name="sd_toggleBorderOffset" format="dimension|float|reference"/>
        <attr name="sd_buttonMarkColorMode" />
    </declare-styleable>

    <declare-styleable name="SdRadioBoxDrawable">
        <attr name="sd_toggleWidth" />
        <attr name="sd_toggleHeight" />
        <attr name="sd_buttonPadding" />
        <attr name="sd_focusBorderEnabled" />
        <attr name="sd_checkedIcon" />
        <attr name="sd_shapeAppearance"/>
        <attr name="sd_toggleBorderWidth" />
        <attr name="sd_toggleIconWidth" />
        <attr name="sd_toggleIconHeight" />
        <attr name="sd_toggleBorderOffset" />
        <attr name="sd_buttonMarkColorMode" />
    </declare-styleable>

    <declare-styleable name="SdSwitchDrawable">
        <attr name="sd_switchWidth" format="dimension|float" />
        <attr name="sd_switchBorderWidth" format="dimension|float" />
        <attr name="sd_switchHeight" format="dimension|float" />
        <attr name="sd_thumbWidth" format="dimension|float" />
        <attr name="sd_thumbHeight" format="dimension|float" />
        <attr name="sd_thumbPadding" format="dimension|float" />
        <attr name="sd_shapeAppearance"/>
        <attr name="sd_background"/>
        <attr name="sd_thumbShapeAppearance" format="reference" />
        <attr name="sd_trackShapeAppearance" format="reference" />
        <attr name="sd_buttonThumbColorMode" format="enum">
            <enum name="add" value="0"/>
            <enum name="src_over" value="1"/>
            <enum name="src_in" value="2"/>
            <enum name="src_atop" value="3"/>
            <enum name="multiply" value="4"/>
            <enum name="screen" value="5"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="CheckBoxGroup" tools:ignore="ResourceName">
        <attr name="sd_hasMain" format="boolean" />
        <attr name="sd_checkBoxStyleOverlay" />
        <attr name="sd_itemOffset" />
        <attr name="sd_itemSpacing" />
    </declare-styleable>

    <declare-styleable name="RadioBoxGroup" tools:ignore="ResourceName">
        <attr name="sd_radioBoxStyleOverlay" />
        <attr name="sd_itemSpacing" />
    </declare-styleable>
</resources>