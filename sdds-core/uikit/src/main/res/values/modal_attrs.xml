<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <attr name="sd_modalStyle" format="reference"/>

    <declare-styleable name="ModalView" tools:ignore="ResourceName">
        <attr name="sd_closeIcon" format="reference"/>
        <attr name="sd_closeIconTint" format="color"/>
        <attr name="sd_closeIconSize" format="dimension"/>
        <attr name="sd_closeIconContentPadding" format="dimension"/>
        <attr name="sd_closeIconAlignment" format="enum">
            <enum name="topEnd" value="0" />
            <enum name="centerEnd" value="1" />
        </attr>
        <attr name="sd_overlayStyleOverlay" format="reference" />
        <attr name="sd_enterAnimation" format="reference" />
        <attr name="sd_exitAnimation" format="reference" />
        <attr name="sd_overlayEnterAnimationDuration" format="integer" />
        <attr name="sd_overlayExitAnimationDuration" format="integer" />
    </declare-styleable>
</resources>