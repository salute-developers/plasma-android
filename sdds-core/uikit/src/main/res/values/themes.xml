    <style name="Sdds.Theme" parent="Theme.AppCompat">
        <item name="sd_avatarStyle">@style/Sdds.Components.Avatar</item>
        <item name="sd_avatarGroupStyle">@style/Sdds.Components.AvatarGroup</item>
