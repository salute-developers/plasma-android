        <item name="sd_avatarGroupStyle">@style/Sdds.Components.AvatarGroup</item>
        <item name="sd_chipStyle">@style/Sdds.Components.Chip</item>
    </style>

    <!-- Базовая тема DayNight -->
    <style name="Sdds.Theme.DayNight" parent="Theme.AppCompat.DayNight">
        <item name="sd_avatarStyle">@style/Sdds.Components.Avatar</item>
        <item name="sd_avatarGroupStyle">@style/Sdds.Components.AvatarGroup</item>
        <item name="sd_chipStyle">@style/Sdds.Components.Chip</item>
