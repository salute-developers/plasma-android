<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="SddsFocusSelector">
        <attr name="sdds_fs_enabled" format="boolean" />
        <attr name="sdds_fs_mode" format="enum">
            <enum name="gradient" value="0" />
            <enum name="animated" value="1" />
        </attr>
        <attr name="sdds_fs_strokeWidth" format="float|fraction|dimension" />
        <attr name="sdds_fs_shapeAppearance" format="reference" />
    </declare-styleable>

    <declare-styleable name="SddsViewState">
        <attr name="state_primary" format="boolean" tools:ignore="ResourceName" />
        <attr name="state_secondary" format="boolean" tools:ignore="ResourceName" />
        <attr name="state_tertiary" format="boolean" tools:ignore="ResourceName" />
        <attr name="state_accent" format="boolean" tools:ignore="ResourceName" />
        <attr name="state_positive" format="boolean" tools:ignore="ResourceName" />
        <attr name="state_warning" format="boolean" tools:ignore="ResourceName" />
        <attr name="state_negative" format="boolean" tools:ignore="ResourceName" />
    </declare-styleable>

    <declare-styleable name="SddsView">
        <attr name="sdds_state" format="enum">
            <enum name="undefined" value="0" />
            <enum name="primary" value="1" />
            <enum name="secondary" value="2" />
            <enum name="tertiary" value="3" />
            <enum name="accent" value="4" />
            <enum name="positive" value="5" />
            <enum name="warning" value="6" />
            <enum name="negative" value="7" />
        </attr>
    </declare-styleable>

    <attr name="sdds_fs_additional_color" format="color"/>
    <attr name="sdds_fs_main_color" format="color"/>
</resources>
