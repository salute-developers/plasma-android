<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Sdds.Components.ProgressBar">
        <item name="sd_minProgress">0.0</item>
        <item name="sd_maxProgress">1.0</item>

        <item name="android:maxHeight">6dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>

        <item name="backgroundTint">#aaa</item>
        <item name="android:progressTint">#000</item>
        <item name="sd_shapeAppearance">?sd_shapeAppearanceCircle</item>
        <item name="sd_indicatorShapeAppearance">?sd_shapeAppearanceCircle</item>
    </style>

    <style name="Sdds.Components.CircularProgressBar">
        <item name="sd_minProgress">0.0</item>
        <item name="sd_maxProgress">1.0</item>

        <item name="sd_trackEnabled">true</item>
        <item name="sd_trackColor">#aaa</item>
        <item name="sd_trackThickness">4dp</item>
        <item name="sd_progressColor">#000</item>
        <item name="sd_progressThickness">4dp</item>

        <item name="sd_progressValueSuffix">%</item>
        <item name="sd_progressValueEnabled">true</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">88dp</item>
    </style>
</resources>