    <attr name="sd_tabsStyle" format="reference" />
    <attr name="sd_tabItemStyle" format="reference" />
    <attr name="sd_iconTabItemStyle" format="reference" />

    <item name="sd_nextButtonId" type="id"/>
    <item name="sd_prevButtonId" type="id"/>
    <item name="sd_tabDisclosureId" type="id"/>

    <declare-styleable name="Tabs" tools:ignore="ResourceName">
        <attr name="sd_dividerEnabled" format="boolean"/>
        <attr name="sd_overflowIconsEnabled" format="boolean"/>
        <attr name="sd_tabsMinSpacing" format="dimension" />
        <attr name="sd_tabItemStyleOverlay" format="reference" />
        <attr name="sd_dropdownMenuStyleOverlay" format="reference" />
        <attr name="sd_dividerStyleOverlay" />

        <attr name="sd_disclosureColor" />
