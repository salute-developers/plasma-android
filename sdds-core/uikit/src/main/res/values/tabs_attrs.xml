        <attr name="sd_disclosureIcon" />

        <attr name="sd_overflowNextIcon" format="reference" />
        <attr name="sd_overflowNextIconColor" format="color|reference" />
        <attr name="sd_overflowPrevIcon" format="reference" />
        <attr name="sd_overflowPrevIconColor" format="color|reference" />

        <attr name="sd_tabIndicatorColor" format="color|reference" />
        <attr name="sd_tabIndicatorEnabled" format="boolean"/>
        <attr name="sd_tabIndicatorThickness" format="dimension" />

        <attr name="android:orientation" />
        <attr name="sd_shapeAppearance" />
        <attr name="sd_shapeAppearanceAdjustment"/>
        <attr name="sd_strokeWidth"/>
        <attr name="sd_strokeColor"/>

    </declare-styleable>

    <declare-styleable name="TabItem" tools:ignore="ResourceName">
        <attr name="backgroundTint"/>
        <attr name="sd_valueTextColor"/>
        <attr name="sd_iconTint"/>
        <attr name="sd_iconSize"/>
        <attr name="sd_contentStartSize"/>
        <attr name="sd_contentEndSize"/>
