        <attr name="sd_shapeAppearance"/>
        <attr name="sd_shapeAppearanceAdjustment"/>
        <attr name="sd_valuePadding"/>
        <attr name="sd_actionEnabled"/>
        <attr name="sd_actionPadding"/>
        <attr name="sd_actionSize"/>
        <attr name="sd_actionTint"/>
        <attr name="sd_action"/>
        <attr name="sd_value"/>
        <attr name="sd_icon"/>
        <attr name="sd_iconPadding"/>
        <attr name="sd_spacing"/>
        <attr name="sd_iconPosition"/>
    </declare-styleable>

    <declare-styleable name="IconTabItem" tools:ignore="ResourceName">
        <attr name="sd_counterOffsetX" format="dimension"/>
        <attr name="sd_counterOffsetY" format="dimension"/>
    </declare-styleable>

</resources>