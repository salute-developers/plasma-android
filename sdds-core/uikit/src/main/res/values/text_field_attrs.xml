<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <attr name="sd_textFieldStyle" format="reference" />
    <attr name="sd_textAreaStyle" format="reference" />

    <declare-styleable name="SdTextFieldState">
        <attr name="sd_state_readonly" format="boolean" />
        <attr name="sd_state_inner_label" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SdDecoratedFieldBox">
        <attr name="sd_icon" />
        <attr name="sd_iconTint" />
        <attr name="sd_iconSize" />
        <attr name="sd_iconPadding" />

        <attr name="sd_action" format="reference" />
        <attr name="sd_actionTint" format="reference|color" />
        <attr name="sd_actionSize" format="dimension" />
        <attr name="sd_actionPadding" format="dimension" />

        <attr name="sd_alignmentLineHeight" format="dimension" />
        <attr name="sd_boxMinHeight" format="dimension" />
        <attr name="sd_boxTint" format="color|reference" />
        <attr name="sd_boxPadding" format="dimension" />
        <attr name="sd_boxPaddingStart" format="dimension" />
        <attr name="sd_boxPaddingTop" format="dimension" />
        <attr name="sd_boxPaddingEnd" format="dimension" />
        <attr name="sd_boxPaddingBottom" format="dimension" />
        <attr name="sd_labelPadding" format="dimension" />
        <attr name="sd_helperTextPadding" format="dimension" />

        <attr name="sd_chipGroupStyleOverlay" />
        <attr name="sd_chipsPadding" format="dimension" />
        <attr name="sd_allowBreakLines" format="boolean" />

        <attr name="sd_suffixText" format="string"/>
        <attr name="sd_suffixDrawable" format="reference"/>
        <attr name="sd_prefixText" format="string"/>
        <attr name="sd_prefixDrawable" format="reference"/>
        <attr name="sd_prefixTextPadding" format="dimension"/>
        <attr name="sd_suffixTextPadding" format="dimension"/>

        <attr name="sd_scrollBarEnabled" format="boolean"/>
        <attr name="sd_scrollBarThickness" format="dimension"/>
        <attr name="sd_scrollBarPaddingTop" format="dimension"/>
        <attr name="sd_scrollBarPaddingEnd" format="dimension"/>
        <attr name="sd_scrollBarPaddingStart" format="dimension"/>
        <attr name="sd_scrollBarPaddingBottom" format="dimension"/>
        <attr name="sd_scrollBarTrackColor" format="color"/>
        <attr name="sd_scrollBarThumbColor" format="color"/>

        <attr name="sd_viewState" />
        <attr name="sd_shapeAppearance" />
        <attr name="sd_strokeWidth" />
        <attr name="sd_strokeColor" />
        <attr name="android:inputType" />
        <attr name="android:imeActionId" />
        <attr name="android:imeActionLabel" />
        <attr name="android:imeOptions" />
    </declare-styleable>

    <declare-styleable name="TextField" tools:ignore="ResourceName">
        <attr name="sd_label" format="string" />
        <attr name="sd_labelAppearance" format="reference" />
        <attr name="sd_labelColor" format="reference|color" />
        <attr name="sd_labelPadding" />
        <attr name="sd_labelPlacement" format="enum">
            <enum name="none" value="0" />
            <enum name="outer" value="1" />
            <enum name="inner" value="2" />
        </attr>

        <attr name="sd_value" />
        <attr name="sd_valueAppearance" format="reference" />
        <attr name="sd_valueColor" format="reference|color" />
        <attr name="sd_placeholder" format="string" />
        <attr name="sd_placeholderAppearance" format="reference" />
        <attr name="sd_placeholderColor" format="reference|color" />

        <attr name="sd_caption" format="string" />
        <attr name="sd_captionEnabled" format="boolean" />
        <attr name="sd_captionPlacement" format="enum">
            <enum name="none" value="0" />
            <enum name="outer" value="1" />
            <enum name="inner" value="2" />
        </attr>
        <attr name="sd_captionAppearance" format="reference" />
        <attr name="sd_captionColor" format="reference|color" />

        <attr name="sd_counter" format="string" />
        <attr name="sd_counterEnabled" />
        <attr name="sd_counterPlacement" format="enum">
            <enum name="none" value="0" />
            <enum name="outer" value="1" />
            <enum name="inner" value="2" />
        </attr>
        <attr name="sd_counterAppearance" format="reference" />
        <attr name="sd_counterColor" format="reference|color" />

        <attr name="sd_helperTextPadding" />

        <attr name="sd_requirementMode" format="enum">
            <enum name="optional" value="0" />
            <enum name="start" value="1" />
            <enum name="end" value="2" />
        </attr>
        <attr name="sd_indicatorSize" format="dimension" />
        <attr name="sd_indicatorOffsetX" format="dimension" />
        <attr name="sd_indicatorOffsetY" format="dimension" />
        <attr name="sd_icon" />
        <attr name="sd_iconTint" />
        <attr name="sd_iconSize" />
        <attr name="sd_iconPadding" />

        <attr name="sd_action" />
        <attr name="sd_actionTint" />
        <attr name="sd_actionSize" />
        <attr name="sd_actionPadding" />

        <attr name="sd_alignmentLineHeight" />
        <attr name="sd_boxMinHeight" />
        <attr name="sd_boxTint" />
        <attr name="sd_boxPadding" />
        <attr name="sd_boxPaddingStart" />
        <attr name="sd_boxPaddingTop" />
        <attr name="sd_boxPaddingEnd" />
        <attr name="sd_boxPaddingBottom" />

        <attr name="sd_viewState" />

        <attr name="sd_shapeAppearance" />
        <attr name="sd_strokeWidth" />
        <attr name="sd_strokeColor" />
        <attr name="sd_chipGroupStyleOverlay" />
        <attr name="sd_chipsPadding" />
        <attr name="sd_allowBreakLines" />

        <attr name="sd_suffixText" />
        <attr name="sd_suffixDrawable" />
        <attr name="sd_prefixText" />
        <attr name="sd_prefixDrawable" />
        <attr name="sd_prefixTextPadding" />
        <attr name="sd_suffixTextPadding" />

        <attr name="sd_scrollBarEnabled" />
        <attr name="sd_scrollBarThickness" />
        <attr name="sd_scrollBarPaddingTop" />
        <attr name="sd_scrollBarPaddingEnd" />
        <attr name="sd_scrollBarPaddingStart" />
        <attr name="sd_scrollBarPaddingBottom" />
        <attr name="sd_scrollBarTrackColor" />
        <attr name="sd_scrollBarThumbColor" />

        <attr name="android:inputType" />
        <attr name="android:imeActionId" />
        <attr name="android:imeActionLabel" />
        <attr name="android:imeOptions" />
        <attr name="android:maxHeight"/>
    </declare-styleable>
</resources>