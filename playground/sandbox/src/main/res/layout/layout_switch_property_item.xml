<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sdds_spacer_28x"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="@dimen/sdds_spacer_8x">

    <com.sdds.uikit.TextView
        style="@style/Serv.SddsServ.Typography.BodyMBold"
        android:id="@+id/property_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/sdds_spacer_4x"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Property name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/property_switch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.sdds.uikit.Switch
        android:id="@+id/property_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>