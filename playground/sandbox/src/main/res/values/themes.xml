<resources>

    <style name="Theme.Sandbox" parent="Thmbldr.StylesSalute.MaterialComponents.DayNight">
        <item name="colorPrimary">?thmbldr_surfaceDefaultSolidPrimary</item>
        <item name="colorPrimaryVariant">?thmbldr_surfaceDefaultSolidSecondary</item>
        <item name="colorOnPrimary">?thmbldr_textDefaultPrimary</item>
        <item name="colorSurface">?thmbldr_surfaceDefaultSolidSecondary</item>
        <item name="colorOnSurface">?thmbldr_textDefaultPrimary</item>
        <item name="colorAccent">?thmbldr_textDefaultAccent</item>
        <item name="colorControlActivated">?thmbldr_textDefaultAccent</item>

        <item name="android:colorBackground">?thmbldr_backgroundDefaultPrimary</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:toolbarStyle">@style/Theme.Sandbox.Toolbar</item>
        <item name="toolbarStyle">@style/Theme.Sandbox.Toolbar</item>

        <item name="sd_shapeAppearanceCircle">@style/Sdds.Shape.Round.Circle</item>
        <item name="thmbldr_shapeRoundXxl">@style/Thmbldr.StylesSalute.Shape.Round.Xxl</item>
        <item name="thmbldr_shapeRoundXl">@style/Thmbldr.StylesSalute.Shape.Round.Xl</item>
        <item name="thmbldr_shapeRoundL">@style/Thmbldr.StylesSalute.Shape.Round.L</item>
        <item name="thmbldr_shapeRoundM">@style/Thmbldr.StylesSalute.Shape.Round.M</item>
        <item name="thmbldr_shapeRoundS">@style/Thmbldr.StylesSalute.Shape.Round.S</item>
        <item name="thmbldr_shapeRoundXs">@style/Thmbldr.StylesSalute.Shape.Round.Xs</item>
        <item name="thmbldr_shapeRoundXxs">@style/Thmbldr.StylesSalute.Shape.Round.Xxs</item>
        <item name="android:buttonStyle">@style/Theme.Sandbox.Components.BasicButton.M</item>
        <item name="sd_textFieldStyle">@style/Theme.Sandbox.Components.TextField.M</item>
        <item name="sd_switchStyle">@style/Theme.Sandbox.Components.Switch</item>
        <item name="android:radioButtonStyle">@style/Theme.Sandbox.Components.RadioBox.M</item>
        <item name="bottomSheetDialogTheme">@style/Theme.Sandbox.ComponentOverlays.BottomSheetDialog</item>
        <item name="sd_disabledAlpha">0.4</item>

    </style>

    <style name="Theme.Sandbox.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">?thmbldr_textDefaultPrimary</item>
        <item name="popupTheme">@style/Theme.Sandbox.PopupOverlay</item>
    </style>

    <style name="Theme.Sandbox.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Sandbox.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Theme.Sandbox.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark" />

    <style name="Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">?thmbldr_textDefaultPrimary</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">?thmbldr_textDefaultPrimary</item>
    </style>

    <style name="Theme.Sandbox.ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">?android:colorBackground</item>
        <item name="shapeAppearance">@style/Thmbldr.StylesSalute.Shape.Round.M</item>
    </style>

    <style name="Theme.Sandbox.Components" />

    <style name="Theme.Sandbox.ComponentOverlays" />

    <style name="Theme.Sandbox.ComponentOverlays.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Theme.Sandbox.ModalBottomSheetDialog</item>
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <item name="enableEdgeToEdge">false</item>

    </style>

</resources>
