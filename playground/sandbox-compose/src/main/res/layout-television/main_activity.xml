<?xml version="1.0" encoding="utf-8"?>
<com.sdds.playground.sandbox.core.vs.DrawerFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:padding="@dimen/sandbox_main_paddings">

    <include
        android:id="@+id/main_content"
        layout="@layout/main_activity_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:name="com.sdds.playground.sandbox.core.vs.ComponentListFragment"/>

</com.sdds.playground.sandbox.core.vs.DrawerFrameLayout>