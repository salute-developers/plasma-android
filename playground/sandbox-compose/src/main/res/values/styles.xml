<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Sandbox.Components.NavigationView" parent="Serv.Sdds.Components.NavigationDrawer">
        <item name="android:backgroundTint">?serv_surfaceDefaultSolidPrimary</item>
        <item name="sd_mode">expanded</item>
    </style>

    <style name="Theme.Sandbox.Components.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="background">@null</item>
        <item name="android:background">@null</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="titleTextColor">?serv_textDefaultPrimary</item>
        <item name="popupTheme">@style/Theme.Sandbox.ComponentOverlays.PopupOverlay</item>
    </style>

    <style name="Theme.Sandbox.ComponentOverlays.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Theme.Sandbox.ComponentOverlays.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark" />

    <style name="Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">?serv_textDefaultPrimary</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">?serv_textDefaultPrimary</item>
    </style>

    <style name="Theme.Sandbox.Components.ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">?android:colorBackground</item>
        <item name="shapeAppearance">@style/Serv.Sdds.Shape.Round.M</item>
    </style>

    <style name="Theme.Sandbox.ComponentOverlays.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Theme.Sandbox.Components.ModalBottomSheetDialog</item>
    </style>

    <style name="Theme.Sandbox.Components.PropertyHeader">
        <item name="android:backgroundTint">?serv_surfaceDefaultSolidSecondary</item>
        <item name="sd_shapeAppearance">?serv_shapeRoundXxs</item>
        <item name="android:focusable">false</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="Theme.Sandbox.Components.PropertyItem">
        <item name="android:backgroundTint">@color/bg_property_item</item>
        <item name="sd_shapeAppearance">?serv_shapeRoundXxs</item>
        <item name="sd_fsEnabled">false</item>
    </style>

    <style name="Theme.Sandbox.Components.PropertyItemLabel">
        <item name="android:textColor">@color/color_property_item_label</item>
        <item name="android:textAppearance">@style/Serv.Sdds.TextAppearance.BodyMBold</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="Theme.Sandbox.Components.PropertyItemValue">
        <item name="android:textColor">@color/color_property_item_value</item>
        <item name="android:textAppearance">@style/Serv.Sdds.TextAppearance.BodyMBold</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="Theme.Sandbox.Components.ToolbarButton" parent="@style/Serv.Sdds.Components.IconButton.M.Clear"/>

    <style name="Theme.Sandbox.Components.ResetButton" parent="@style/Serv.Sdds.Components.IconButton.Xs.Clear"/>

    <style name="Theme.Sandbox.Components.PropertyEditorField" parent="@style/Serv.Sdds.Components.TextField.M.OuterLabel">
        <item name="sd_labelAppearance">@style/Serv.Sdds.TextAppearance.BodyLBold</item>
        <item name="sd_labelColor">?serv_textDefaultPrimary</item>
        <item name="sd_labelPadding">?serv_spacing8x</item>
    </style>

    <style name="Theme.Sandbox.Components.PropertyConfirmButton" parent="@style/Serv.Sdds.Components.BasicButton.M.Default"/>

    <style name="Theme.Sandbox.Components.PropertyChoiceTitle" parent="@style/Serv.Sdds.Typography.BodyLBold">
        <item name="android:textColor">?serv_textDefaultPrimary</item>
    </style>

    <style name="Theme.Sandbox.Components.ComponentCanvas">
        <item name="sd_shapeAppearance">?serv_shapeRoundL</item>
        <item name="sd_strokeColor">?serv_surfaceDefaultSolidTertiary</item>
        <item name="sd_strokeWidth">1dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:clipChildren">true</item>
    </style>

    <style name="Theme.Sandbox.Components.PropertiesList">
        <item name="sd_shapeAppearance">?serv_shapeRoundL</item>
        <item name="sd_strokeColor">?serv_surfaceDefaultSolidTertiary</item>
        <item name="sd_strokeWidth">1dp</item>
        <item name="sd_clipToOutline">true</item>
    </style>

    <style name="Theme.Sandbox.Components.EditorDialogContainer"/>

    <style name="Theme.Sandbox.Components.PropertyItemSwitch" parent="Serv.Sdds.Components.Switch.M">
        <item name="sd_buttonTrackColor">@color/bg_color_property_switch_track</item>
        <item name="android:duplicateParentState">true</item>
    </style>

</resources>