<?xml version="1.0" encoding="utf-8"?>
<com.sdds.uikit.LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Theme.Sandbox.Components.EditorDialogContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipChildren="false"
    android:clipToPadding="false">

    <include
        android:id="@+id/header"
        layout="@layout/layout_header_property_item" />

    <com.sdds.uikit.TextField
        style="@style/Theme.Sandbox.Components.PropertyEditorField"
        android:id="@+id/text_editor_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sandbox_editor_margin_top"
        app:sd_placeholder="@string/sandbox_editor_placeholder"
        android:layout_marginHorizontal="@dimen/sandbox_property_paddings"
        android:imeOptions="actionDone"/>

</com.sdds.uikit.LinearLayout>