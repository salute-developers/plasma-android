<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Sandbox.Components.NavigationView" parent="Sdkit.StarDs.Components.NavigationDrawer">
        <item name="android:backgroundTint">?sdkit_surfaceDefaultSolidPrimary</item>
        <item name="sd_mode">expanded</item>
    </style>

    <style name="Theme.Sandbox.Components.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">?sdkit_textDefaultPrimary</item>
        <item name="popupTheme">@style/Theme.Sandbox.ComponentOverlays.PopupOverlay</item>
        <item name="background">@null</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Theme.Sandbox.Components.EditorDialogContainer">
        <item name="android:background">?sdkit_backgroundDefaultModalSheet</item>
        <item name="sd_shapeAppearance">?sdkit_shapeRoundL</item>
    </style>

    <style name="Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">?sdkit_textDefaultPrimary</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">?sdkit_textDefaultPrimary</item>
    </style>

    <style name="Theme.Sandbox.Components.ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">?android:colorBackground</item>
        <item name="shapeAppearance">?sdkit_shapeRoundM</item>
    </style>

    <style name="Theme.Sandbox.Components.PropertyItem">
        <item name="android:backgroundTint">@color/bg_property_item</item>
        <item name="sd_shapeAppearance">?sdkit_shapeRoundXxs</item>
        <item name="sd_fsEnabled">false</item>
    </style>

    <style name="Theme.Sandbox.Components.PropertyHeader">
        <item name="android:backgroundTint">?sdkit_surfaceDefaultSolidSecondary</item>
        <item name="android:focusable">false</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="Theme.Sandbox.Components.PropertyItemLabel">
        <item name="android:textColor">@color/color_property_item_label</item>
        <item name="android:textAppearance">@style/Sdkit.StarDs.TextAppearance.BodyMBold</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="Theme.Sandbox.Components.PropertyItemValue">
        <item name="android:textColor">@color/color_property_item_value</item>
        <item name="android:textAppearance">@style/Sdkit.StarDs.TextAppearance.BodyMBold</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="Theme.Sandbox.Components.PropertyItemSwitch" parent="Sdkit.StarDs.Components.Switch.M">
        <item name="sd_buttonTrackColor">@color/bg_color_property_switch_track</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="Theme.Sandbox.Components.ToolbarButton" parent="@style/Sdkit.StarDs.Components.IconButton.M"/>

    <style name="Theme.Sandbox.Components.ResetButton" parent="@style/Sdkit.StarDs.Components.IconButton.Xs"/>

    <style name="Theme.Sandbox.Components.PropertyEditorField" parent="@style/Sdkit.StarDs.Components.TextField.M.OuterLabel">
        <item name="sd_labelAppearance">@style/Sdkit.StarDs.TextAppearance.BodyLBold</item>
        <item name="sd_labelColor">?sdkit_textDefaultPrimary</item>
        <item name="sd_labelPadding">?sdkit_spacing8x</item>
        <item name="sdkit_textfieldColors">state_default</item>
    </style>

    <style name="Theme.Sandbox.Components.PropertyConfirmButton" parent="@style/Sdkit.StarDs.Components.BasicButton.M"/>

    <style name="Theme.Sandbox.Components.PropertyChoiceTitle" parent="@style/Sdkit.StarDs.Typography.BodyLBold">
        <item name="android:textColor">?sdkit_textDefaultPrimary</item>
    </style>

    <style name="Theme.Sandbox.Components.ComponentCanvas">
        <item name="sd_shapeAppearance">?sdkit_shapeRoundL</item>
        <item name="sd_strokeColor">?sdkit_surfaceDefaultSolidTertiary</item>
        <item name="sd_strokeWidth">1dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:clipChildren">true</item>
    </style>

    <style name="Theme.Sandbox.Components.PropertiesList">
        <item name="sd_shapeAppearance">?sdkit_shapeRoundL</item>
        <item name="sd_strokeColor">?sdkit_surfaceDefaultSolidTertiary</item>
        <item name="sd_strokeWidth">1dp</item>
        <item name="sd_clipToOutline">true</item>
        <item name="android:clipChildren">false</item>
    </style>
</resources>