<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Plasma.SdService.Components.RadioBox" parent="Sdds.Components.RadioBox">
        <item name="sd_buttonBorderColor">@color/color_checkable_border</item>
        <item name="sd_buttonBoxColor">?plasma_surfaceDefaultAccent</item>
        <item name="sd_buttonMarkColor">?plasma_textOnDarkPrimary</item>
        <item name="android:textColor">?plasma_textDefaultPrimary</item>
        <item name="sd_descriptionTextColor">?plasma_textDefaultSecondary</item>
    </style>

    <style name="Plasma.SdService.Components.RadioBox.M">
        <item name="sd_buttonMarkSize">10dp</item>
        <item name="sd_buttonSize">24dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="sd_buttonPadding">1dp</item>
        <item name="android:textAppearance">@style/Plasma.SdService.TextAppearance.BodySNormal</item>
        <item name="sd_descriptionTextAppearance">@style/Plasma.SdService.TextAppearance.BodySNormal</item>
    </style>

    <style name="Plasma.SdService.Components.RadioBox.S">
        <item name="sd_buttonSize">16dp</item>
        <item name="sd_buttonMarkSize">8dp</item>
        <item name="sd_buttonPadding">0dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textAppearance">@style/Plasma.SdService.TextAppearance.BodyXsNormal</item>
        <item name="sd_descriptionTextAppearance">@style/Plasma.SdService.TextAppearance.BodyXsNormal</item>
    </style>

    <style name="Plasma.SdService.Components.RadioBoxGroup" parent="Sdds.Components.RadioBoxGroup"/>

    <style name="Plasma.SdService.Components.RadioBoxGroup.M">
        <item name="sd_itemSpacing">12dp</item>
    </style>

    <style name="Plasma.SdService.Components.RadioBoxGroup.S">
        <item name="sd_itemSpacing">10dp</item>
    </style>
</resources>