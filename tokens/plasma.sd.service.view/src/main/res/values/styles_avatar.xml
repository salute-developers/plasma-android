    <style name="Plasma.SdService.Components.AvatarGroup" parent="Sdds.Components.AvatarGroup">
        <item name="sd_avatarStyleOverlay">@style/Plasma.SdService.ComponentOverlays.AvatarInGroup</item>
    </style>

    <style name="Plasma.SdService.ComponentOverlays.AvatarInGroup">
