        <item name="sd_actionSize">24dp</item>

        <item name="android:textAppearance">@style/Salute.StylesSalute.TextAppearance.BodySBold</item>
    </style>

    <style name="Salute.StylesSalute.Components.Avatar.S">
        <item name="android:maxWidth">24dp</item>
        <item name="android:maxHeight">24dp</item>
        <item name="android:minWidth">24dp</item>
        <item name="android:minHeight">24dp</item>
        <item name="sd_statusSize">6dp</item>
        <item name="sd_statusOffsetX">0dp</item>
        <item name="sd_statusOffsetY">0dp</item>
        <item name="sd_actionSize">16dp</item>

        <item name="android:textAppearance">@style/Salute.StylesSalute.TextAppearance.BodyXxsNormal</item>
    </style>

    <style name="Salute.StylesSalute.Components.AvatarGroup" parent="Sdds.Components.AvatarGroup">
        <item name="sd_avatarStyleOverlay">@style/Salute.StylesSalute.ComponentOverlays.AvatarInGroup</item>
    </style>

    <style name="Salute.StylesSalute.ComponentOverlays.AvatarInGroup">
        <item name="sd_avatarStyle">@style/Salute.StylesSalute.Components.Avatar.S</item>
    </style>

