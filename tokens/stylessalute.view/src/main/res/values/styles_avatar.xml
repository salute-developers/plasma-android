<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Salute.StylesSalute.Components.Avatar" parent="Sdds.Components.Avatar">
        <!-- TODO Поменять градиент текста на сгенерированные токены -->
        <item name="sd_textColorStart">#0D8523</item>
        <item name="sd_textColorEnd">#0DA8AB</item>

        <item name="sd_statusColor">@color/salute_color_avatar_status</item>
        <item name="sd_actionScrimColor">?salute_overlayOnDarkSoft</item>
        <item name="sd_actionTint">?salute_textOnDarkPrimary</item>
        <item name="android:background">?salute_surfaceDefaultGradientMain</item>
        <item name="sd_backgroundAlpha">0.2</item>
    </style>

    <style name="Salute.StylesSalute.Components.Avatar.XXL">
        <item name="android:maxWidth">88dp</item>
        <item name="android:maxHeight">88dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">88dp</item>
        <item name="sd_statusSize">12dp</item>
        <item name="sd_statusOffsetX">1dp</item>
        <item name="sd_statusOffsetY">7dp</item>
        <item name="sd_actionSize">36dp</item>

        <item name="android:textAppearance">@style/Salute.StylesSalute.TextAppearance.HeaderH2Bold</item>
    </style>

    <style name="Salute.StylesSalute.Components.Avatar.L">
        <item name="android:maxWidth">48dp</item>
        <item name="android:maxHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="sd_statusSize">8dp</item>
        <item name="sd_statusOffsetX">1dp</item>
        <item name="sd_statusOffsetY">3dp</item>
        <item name="sd_actionSize">24dp</item>

        <item name="android:textAppearance">@style/Salute.StylesSalute.TextAppearance.HeaderH4Bold</item>
    </style>

    <style name="Salute.StylesSalute.Components.Avatar.M">
        <item name="android:maxWidth">36dp</item>
        <item name="android:maxHeight">36dp</item>
        <item name="android:minWidth">36dp</item>
        <item name="android:minHeight">36dp</item>
